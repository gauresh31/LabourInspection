<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_head"
        style="@style/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appbar"
        android:layout_margin="10dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="Employer Details"
        android:textSize="30dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/tv_head"
        android:background="@color/grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Name of Worker:" />

                <EditText
                    android:id="@+id/edit_name_of_worker"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Designation:" />

                <EditText
                    android:id="@+id/edit_designation"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Length of Service:" />

                <EditText
                    android:id="@+id/edit_length_of_service"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Working Hours(HH:MM):" />

                <EditText
                    android:id="@+id/edit_working_hours"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="time"
                    android:maxLength="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Rest Time:" />

                <EditText
                    android:id="@+id/edit_rest_time"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="time"
                    android:maxLength="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Attendance card/ Wage slip:" />

                <EditText
                    android:id="@+id/edit_attend_card"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Over Time Rate:" />

                <EditText
                    android:id="@+id/edit_over_time_rate"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Salary per day/ per month:" />

                <EditText
                    android:id="@+id/edit_salary_per_day"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Date of Payment:" />

                <EditText
                    android:id="@+id/edit_date_of_payment"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Bonus:" />

                <EditText
                    android:id="@+id/edit_bonus"
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:maxLength="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Weekly Off:" />

                <Spinner
                    android:id="@+id/spin_weeklyOff"
                    style="@style/spinner"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/textview"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:padding="0dp"
                    android:text="Wages:" />

                <Spinner
                    android:id="@+id/spin_wages"
                    style="@style/spinner"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/button_blue"
                android:text="Add"
                android:textColor="@android:color/white"
                android:textSize="20dp" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:maxLength="30" />

                <EditText
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Designation"
                    android:inputType="textPersonName"
                    android:maxLength="20" />

                <EditText
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Length of Service"
                    android:inputType="textPersonName" />

                <EditText
                    style="@style/edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="Working Hours"
                    android:inputType="time"
                    android:maxLength="5" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_employer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:background="@color/editText_border" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:layout_weight="1"
                android:background="@drawable/button_blue"
                android:text="Next"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>